                                    </li>
                                </ul> -->

                                <button type="button" style="width: 5rem; "
                                    class="btn btn-danger btn-rounded btn-sm my-0 "
                                    onclick="location.href='/delete/<%- user._id %>'">Remove</button>
                            </span>
                        </td>

                    </tr>
                    <% }) %>

                </tbody>

                <tfoot>
                    <tr>
                        <th>Client Images</th>
                        <th>Client Name</th>
                        <th>Email</th>
                        <th>Password</th>
                        <th>Information</th>
                        <th> </th>
